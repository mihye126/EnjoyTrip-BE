<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.trip.mapper.UserMapper">


	<select id="findByEmail" resultType="User" parameterType="String">
		select * from user where user_email =#{user_email}
	</select>

	<select id="findById" resultType="User" parameterType="long">
		select * from user where id =#{id}
	</select>


	<insert id="insert" parameterType="User">
		insert into user values (#{id}, #{pw}, #{username}, #{phone}, #{admin_check}, #{email}, #{joindate}, #{token})
	</insert>


	<delete id="delete" parameterType="String">
		delete from user where user_id = #{id}
	</delete>

	<update id="update" parameterType="User">
		Update user set user_pw =#{user_pw}, user_name= #{user_name}, user_phone=#{user_phone}, token=#{token} where id = #{id}
	</update>

	<update id="updatePassword" parameterType="map">
		Update user set user_pw =#{pw} where id = #{id}
	</update>


	<select id="getRefreshToken" parameterType="string" resultType="long">
		select token
		from user
		where id = #{id}
	</select>

	<update id="saveRefreshToken" parameterType="map">
		update user
		set token = #{token}
		where id = #{id}
	</update>

</mapper>
